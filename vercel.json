{
    "version": 2,
    "framework": null,
    "builds": [
        { "src": "/api/index.php", "use": "vercel-php@0.5.5" },
        { "src": "/public/**", "use": "@vercel/static" }
    ],
    "routes": [
        {
            "src": "/(css|js|images)/(.*)",
            "dest": "public/$1/$2"
        },
        { 
            "src": "/swagger/(.*)", 
            "dest": "/public/swagger/$1" 
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "env": {
        "APP_NAME": "Weather-API-Timor-Leste",
        "APP_ENV": "production",
        "APP_DEBUG": "true",
        "APP_URL": "https://weather-api-timor-leste.vercel.app/",
        "DB_CONNECTION":"pgsql",
        "DB_HOST":"aws-0-ap-southeast-1.pooler.supabase.com",
        "DB_PORT":"6543",
        "DB_DATABASE":"postgres",
        "DB_USERNAME":"postgres.vlxypasupslughpyyvlw",
        "DB_PASSWORD":"weather@tls",

        "APP_CONFIG_CACHE": "/tmp/config.php",
        "APP_EVENTS_CACHE": "/tmp/events.php",
        "APP_PACKAGES_CACHE": "/tmp/packages.php",
        "APP_ROUTES_CACHE": "/tmp/routes.php",
        "APP_SERVICES_CACHE": "/tmp/services.php",
        "VIEW_COMPILED_PATH": "/tmp",
        "L5_SWAGGER_GENERATE_ALWAYS": "false",

        "CACHE_DRIVER": "array",
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "cookie"
    }
    
}